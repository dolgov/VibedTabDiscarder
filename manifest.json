{
  "manifest_version": 3,
  "name": "Vibed Tab Discarder",
  "version": "1.0",
  "description": "Automatically discard inactive tabs.",
  "permissions": [
    "tabs",
    "alarms",
    "storage",
    "scripting",
    "activeTab"
  ],
  "icons": {
    "16": "icons/normal.png",
    "32": "icons/normal.png",
    "48": "icons/normal.png",
    "128": "icons/normal.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/normal.png",
      "32": "icons/normal.png",
      "48": "icons/normal.png"
    }
  }
}
